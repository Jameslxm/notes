<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:id="@+id/content"    android:layout_width="match_parent"    android:layout_height="match_parent"    tools:context=".MainActivity">    <androidx.constraintlayout.widget.ConstraintLayout        android:layout_width="match_parent"        android:layout_height="wrap_content">        <TextView            android:id="@+id/tvA"            android:layout_width="0dp"            android:layout_height="100dp"            app:layout_constraintLeft_toLeftOf="parent"            app:layout_constraintRight_toLeftOf="@+id/tvB"            app:layout_constraintTop_toTopOf="parent"            app:layout_constraintHorizontal_chainStyle="spread_inside"            android:background="@color/colorPrimaryDark"            android:text="a"/>        <TextView            android:id="@+id/tvB"            android:layout_width="0dp"            android:layout_height="100dp"            android:text="b"            app:layout_constraintLeft_toRightOf="@+id/tvA"            app:layout_constraintRight_toLeftOf="@+id/tvC"            app:layout_constraintTop_toTopOf="parent"            />        <TextView            android:id="@+id/tvC"            android:layout_width="0dp"            android:layout_height="100dp"            android:text="c"            app:layout_constraintLeft_toRightOf="@+id/tvB"            app:layout_constraintTop_toTopOf="parent"            app:layout_constraintRight_toRightOf="parent"            />    </androidx.constraintlayout.widget.ConstraintLayout>    <ImageView        android:id="@+id/right_top"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:contentDescription="@null"        android:scaleType="centerCrop"        android:background="@drawable/bg" /><!--    <LinearLayout--><!--        android:layout_width="match_parent"--><!--        android:layout_height="match_parent"--><!--        android:background="#fff"--><!--        android:alpha="0.8"--><!--        >--><!--        <TextView--><!--            android:layout_width="wrap_content"--><!--            android:layout_height="wrap_content"--><!--            android:text="3333"/>--><!--    </LinearLayout>--></FrameLayout>