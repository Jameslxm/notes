<?xml version="1.0" encoding="utf-8"?><layer-list xmlns:android="http://schemas.android.com/apk/res/android">    !--  设置背景色  -->    <item android:id="@android:id/background"        android:drawable="@drawable/bg_color_progressbar">    </item>    <!--  设置进度条颜色  -->    <item android:id="@android:id/progress">        <clip>            <shape>                <corners android:radius="15px"/>                <gradient                    android:endColor="#FFAA00"                    android:startColor="#FF8000" />            </shape>        </clip>    </item></layer-list>